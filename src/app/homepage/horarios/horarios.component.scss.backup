@use '../../../styles.scss';
@use '../homepage.component.scss';

// Common variables
$primary-blue: #3498db;
$dark-blue: #2980b9;
$light-blue: rgba(52, 152, 219, 0.1);
$purple: #9b59b6;
$text-color: #555;
$border-color: rgba(0, 0, 0, 0.08);

// Common mixins
@mixin separator-line {
  border-bottom: 1px solid $border-color;
  
  &:last-child { border-bottom: none; }
}

@mixin info-display {
  display: flex;
  align-items: center;
  
  i {
    color: $primary-blue;
    margin-right: 8px;
  }
  
  span { font-weight: 500; }
}

.perfil-card {
  .perfil-lista {
    margin-bottom: 1.25rem;
    
    .horario-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem 12px;
      @include separator-line;
      
      &:first-child { padding-top: 0; }
      &:last-child { padding-bottom: 0; }
      
      .dia {
        @include info-display;
        
        i { font-size: 1rem; }
      }
      
      .hora {
        font-weight: 500;
        color: $primary-blue;
      }
    }
  }
  
  .observacao {
    display: flex;
    background-color: $light-blue;
    border-radius: 4px;
    padding: 0.75rem;
    margin-bottom: 1.25rem;
    
    i {
      color: $primary-blue;
      font-size: 1.1rem;
      margin-right: 10px;
      flex-shrink: 0;
      margin-top: 2px;
    }
    
    p {
      margin: 0;
      font-size: 0.9rem;
      color: $text-color;
    }
  }
  
  .btn-agendar {
    width: 100%;
    background-color: $primary-blue;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.75rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.2s;
    
    i { margin-right: 8px; }
    
    &:hover { background-color: $dark-blue; }
  }
  
  .agendamento-info {
    display: flex;
    align-items: center;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid $border-color;
    
    i {
      color: $purple;
      margin-right: 10px;
      font-size: 1.1rem;
    }
    
    span { font-weight: 500; }
  }
}
