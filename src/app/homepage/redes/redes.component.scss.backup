@use '../../../styles.scss';
@use '../homepage.component.scss';

// Social media colors
$social-colors: (
  instagram: (#E1306C, rgba(225, 48, 108, 0.1), rgba(225, 48, 108, 0.2)),
  facebook: (#3B5998, rgba(59, 89, 152, 0.1), rgba(59, 89, 152, 0.2)),
  linkedin: (#0077B5, rgba(0, 119, 181, 0.1), rgba(0, 119, 181, 0.2)),
  youtube: (#FF0000, rgba(255, 0, 0, 0.1), rgba(255, 0, 0, 0.2)),
  twitter: (#1DA1F2, rgba(29, 161, 242, 0.1), rgba(29, 161, 242, 0.2)),
  tiktok: (#000000, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.15)),
  pinterest: (#E60023, rgba(230, 0, 35, 0.1), rgba(230, 0, 35, 0.2)),
  website: (#3498db, rgba(52, 152, 219, 0.1), rgba(52, 152, 219, 0.2))
);

// Social network mixin
@mixin social-network($color, $bg-light, $bg-hover) {
  background-color: $bg-light;
  color: $color;
  
  &:hover {
    background-color: $bg-hover;
    transform: translateY(-3px);
  }
}

.redes-card {
  .redes-lista {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 1rem;
  }

  .rede-item {
    align-items: left;
    text-decoration: none;
    padding: 1rem;
    border-radius: 6px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    transition: all 0.2s ease;
    font-weight: 500;

    i {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    span {
      font-size: 0.85rem;
      font-weight: 500;
    }

    // Generate social network styles using the map
    @each $network, $colors in $social-colors {
      &.#{$network} {
        @include social-network(nth($colors, 1), nth($colors, 2), nth($colors, 3));
      }
    }
  }

  .sem-redes {
    display: flex;
    align-items: flex-start;
    padding: 1rem;
    background-color: rgba(0, 0, 0, 0.04);
    border-radius: 4px;

    i {
      color: #7f8c8d;
      margin-right: 10px;
      margin-top: 2px;
    }

    p {
      margin: 0;
      font-size: 0.9rem;
      color: #555;
    }
  }
}

.loading-message {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  color: #777;

  i { margin-right: 10px; }
}

.fb-icon-margin { margin-right: 6px; }
